<h1>Burger Time!</h1>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">
      <h2>Burger to Eat</h2>
      <ul>
        {{#each burger}}
        {{#unless this.devoured}}
        <li>
            {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="id" value="true">
          <button type="submit">Devour IT!</button>
        </form>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-4">
      <h2>Devoured Burgers</h2>
      <ul>
        {{#each burger}}
        {{#if this.devoured}}
        <li>
            {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Make Another!</button>
        </form>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-4">
      <h2>Add Burger</h2>
      <form class="add-burger" action="/" method="POST">
      <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="burger_name">
      </div>
      <div class="form-group">
        <label for="devoured"Devoured?</label>
          <input type="radio" name="devoured" value="1" checked> Devoured!<br>
          <input type="radio" name="devoured" value="0">Not Eaten Yet
      </div>
      <button type="submit">Add Burger</button>
    </form>
    </div>
  </div>
</div>
